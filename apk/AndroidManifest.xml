<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.healthconnect.controller">

    <uses-permission android:name="android.permission.MANAGE_HEALTH_PERMISSIONS" />
    <uses-permission android:name="android.permission.MANAGE_HEALTH_DATA" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    
    <application
        android:name=".HealthConnectApplication"
        android:icon="@drawable/health_connect_logo"
        android:label="@string/app_label"
        android:supportsRtl="true"
        android:theme="@style/Theme.HealthConnect">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- For Open button in App Info. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.INFO" />
            </intent-filter>
            <!-- Deeplink to Home Screen -->
            <intent-filter>
                <action android:name="android.healthconnect.action.HEALTH_HOME_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".permissions.connectedapps.settings.SettingsActivity"
            android:permission="android.permission.GRANT_RUNTIME_PERMISSIONS"
            android:exported="true">
            <!-- Deeplink to App Access screen -->
            <intent-filter>
                <action android:name="android.healthconnect.action.MANAGE_HEALTH_PERMISSIONS_AND_DATA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.android.healthconnect.controller.permissions.PermissionsActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:permission="android.permission.GRANT_RUNTIME_PERMISSIONS">
            <intent-filter android:priority="1">
                <action android:name="android.healthconnect.action.MANAGE_HEALTH_PERMISSIONS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.android.healthconnect.controller.onboarding.OnboardingActivity"
            android:exported="true"
            android:theme="@style/Theme.HealthConnect" />

        <service
            android:name=".quicksettings.QuickSettingsService"
            android:exported="true"
            android:icon="@drawable/health_connect_logo"
            android:label="@string/app_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
    </application>

    <queries>
        <intent>
            <!-- An intent action to get package visibility into client apps. See more at b/193547946 -->
            <action android:name="android.intent.action.VIEW_PERMISSION_USAGE" />
            <category android:name="android.intent.category.HEALTH_PERMISSIONS" />
        </intent>
    </queries>
</manifest>